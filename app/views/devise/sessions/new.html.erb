<div class="row justify-content-center">
  <div class="col-md-6 login-form-1 ">
    <h3>Login to <strong>ImageHub</strong> </h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-group mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "*Your Email", class:"form-control input_user" %>
      </div>

      <div class="input-group mb-2">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "*Your Password", class:"form-control input_pass" %>
      </div>
      
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :remember_me, class:"custom-control-input", id:"customControlInline" %>
          <label class="custom-control-label" for="customControlInline">Remember me</label>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-3 login_container">
          <%= f.submit "Log in", class:"btnSubmit" %>
      </div>

      <div class="mt-4">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>


